 <div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
        </div> 
    </div>
     　　<table class="table table-borderless col-8 mt-3 mb-5">
     　  <tr>
            <th class="col-2">会員ID</th>
            <th class="col-6"><%= @customer.id %></th>
        </tr>　  
        <tr>
            <th>氏名</th>
            <th><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        <tr>
            <th>カナ</th>
            <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
             <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
        </tr>
         <tr>
             <th>住所</th>
            <th><%= @customer.address %></th>
        </tr>
         <tr>
             <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
        </tr>
         <tr>
             <th>メールアドレス</th>
            <th><%= @customer.email %></th>
        </tr>
         <tr>
             <th>会員ステータス</th>
            <th>
               <% if @customer.is_deleted == false %>
                <div class="text-success">有効</div>
               <% else %>
                <div class="text-secondary">退会</div>
               <% end %>
            </th>
        </tr>
        <tr>
            <th></th>
            <th> <%= link_to "編集する",  edit_admin_customer_path , class: 'btn btn-success' %></th>
        </tr>
    </table>
   
            
 </div>