<div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">会員一覧</h2>
        </div> 
    </div>
    <div class="row">
      <div class="col-12 mt-3">
                   <table class="table table-hover table-inverse">
                        <thead class="table-secondary">
                            <tr>
                              <th style="width: 10%">会員ID</th>
                              <th style="width: 30%">氏名</th>
                              <th style="width: 30%">メールアドレス</th>
                              <th style="width: 30%">ステータス</th>
                            </tr>
                        </thead>
                        <tbody>   
                            <% @customers.each do |customer| %>
                              <tr>
                                <td>
                                   <%= customer.id %>    
                                </td>  
                                <td>
                                  <%= link_to  admin_customer_path(customer.id) do %>
                                       <%= customer.last_name %><%= customer.first_name %>
                                  <% end %>
                                 
                                </td>
                                <td>
                                  <%=  customer.email %>
                                </td>
                                <td>
                                 <% if customer.is_deleted == false %>
                                  <div class="text-success">有効</div>
                                 <% else %>
                                  <div class="text-secondary">退会</div>
                                 <% end %>
                                </td>
                              </tr>
                            <% end %>
                        </tbody>
                    </table>
             
      </div>  
    </div>
    
</div>