<div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">商品一覧</h2>
        </div> 
    </div>
    <div class="row">
      <div class="col-12 mt-3">
                   <table class="table table-hover table-inverse">
                        <thead class="table-secondary">
                            <tr>
                              <th style="width: 10%">商品ID</th>
                              <th style="width: 35%">商品名</th>
                              <th style="width: 10%">税抜価格</th>
                              <th style="width: 30%">ジャンル</th>
                              <th style="width: 15%">ステータス</th>
                            </tr>
                        </thead>
                        <tbody>   
                            <% @items.each do |item| %>
                              <tr>
                                <td>
                                   <%= item.id %>    
                                </td>  
                                <td>
                                  <%= link_to  admin_item_path(item.id) do %>
                                   <%= item.name %>    
                                  <% end %>
                                 
                                </td>
                                <td>
                                  <%=  item.price %>
                                </td>
                                <td>
                                  <%=  item.genre_id %>
                                </td>
                                <td>
                                 <% if item.is_active == true %>
                                  販売中
                                 <% else %>
                                  販売停止中
                                 <% end %>
                                </td>
                              </tr>
                            <% end %>
                        </tbody>
                    </table>
             
      </div>  
    </div>
    
</div>