<div class="container">
    <div class="row">
    <div class="ml-5">
　　　 <h2 class="mb-3">商品新規登録</h2>
    </div>     
  </div> 
 <%= form_with model: @admins_item, url: admin_items_path do |f| %>
  <div class="row justify-content-center">
      <div class="col-8 mb-3">
              <div class="row">
                <div class="col-2 h5 mt-5">商品画像</div>
                    
                      <label class="col-3 offset-1 ">
                          <div class="custom-file">
                               <%= f.file_field :image, accept: "image/*", class: "custom-file-input" %>
                              <span class="btn btn btn-outline-dark">ファイルを選択</span>
                           </div>  
                      </label>
                     <p class="file_message mt-5">選択されていません</p>
             </div>
      </div>
       <div class="col-8 mb-3">
              <div class="row">
                <div class="col-2 h5 mt-2">商品名</div>
                    <div class="col-7 offset-1">
                        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
                    </div>
                     
            　 </div>
       </div>
       <div class="col-8 mb-3">
              <div class="row">
                <div class="col-2 h5 mt-2">商品説明</div>
                    <div class="col-7 offset-1">
                        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control", rows: 8 %>
                    </div>
                     
            　 </div>
       </div>
        <div class="col-8 mb-3">
              <div class="row">
                <div class="col-2 h5 mt-2">ジャンル</div>
                    <div class="col-7 offset-1">
                    <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}, class: "form-control") %>
                   </div>
                   
            　 </div>
         </div>
        <div class="col-8 mb-3">
              <div class="row">
                <div class="col-2 h5 mt-2">税抜価格</div>
                    <div class="col-7 offset-1">
                        <%= f.text_field :price, autofocus: true, autocomplete: "price", class: "form-control" %>
                    </div>
                    <p class="mt-1">円</p>
            　 </div>
       </div>
         <div class="col-8 mb-3">
              <div class="row">
                <div class="col-3 mt-2">販売ステータス</div>
                    <div class="col-7">
                      <%= f.radio_button :is_active, :true %>
                      <%= f.label :is_active, "販売中  " %>
                      <%= f.radio_button :is_active, :false %>
                      <%= f.label :is_active, "販売停止中" %>
                   </div>
                   
            　 </div>
         </div>
         
         <div class="col-11 mb-3">
              <div class="row">
                <div class="col-3 offset-4">
                  <div class="row justify-content-center">
                  <%= f.submit "新規登録",class: "btn btn-success col-10" %>
                  </div>
                </div>
              </div>
            </div>
       
 </div>
  </div>
 <% end %>
</div>
<script>
    $('input').on('change', function () {
    var file = $(this).prop('files')[0];
    $('.file_message').text(file.name);
});
</script>