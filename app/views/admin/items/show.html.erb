<div class="container">
     <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-5">商品詳細</h2>
        </div> 
    </div>
    <div class="row">
        <div class="col-3">
            <%= image_tag @item.get_image(300,300) %>
        </div>
        <div class="col-7 offset-1">
            <table class="table table-borderless">
              <tr class="mb-2">
                  <th class="col-2">商品名</th>
                  <td class="col-5"><%= @item.name %></td>
              </tr>
              <tr>
                  <th class="col-2">商品説明</th>
                  <td class="col-5"><%= @item.introduction %></td>
              </tr>
              <tr>
                  <th class="col-2">ジャンル</th>
                  <td class="col-5"><%= @item.genre_id %></td>
              </tr>
              <tr>
                  <th class="col-2">税込価格</br>（税抜価格）</th>
                  <td class="col-5"><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
              </tr>
              <tr>
                  <th class="col-2">販売ステータス</th>
                  <td class="col-5">
                     <% if @item.is_active == true %>
                       <div class="text-success">販売中</div>
                     <% else %>
                      　<div class="text-secondary">販売停止中</div>
                     <% end %>
                  </td>
              </tr>
            </table>
             <div class="col-11 mb-3">
              <div class="row">
                <div class="col-3 offset-4">
                  <div class="row justify-content-center">
                    <%= link_to "編集する",  edit_admin_item_path , class: 'btn btn-success col-10' %>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>