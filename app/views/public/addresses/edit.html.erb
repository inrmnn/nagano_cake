<div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">配送先編集</h2>
             
        </div>     
    </div>          
    
    <%= form_with model: @address, url: address_path, local:true do |f| %>
    <div class="row mb-3">
         <div class="col-11 mb-3">
          <div class="row">
            <div class="col-3 col-form-label">郵便番号（ハイフンなし）</div>
            <div class="col-3 offset-1">
              <%= f.telephone_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control"%>
            </div>
          </div>
        </div>
        
        <div class="col-11 mb-3">
          <div class="row">
            <div class="col-2 col-form-label">住所</div>
            <div class="col-7 offset-2">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"%>
            </div>
          </div>
        </div>
        
        <div class="col-11 mb-3">
          <div class="row">
            <div class="col-3 col-form-label">宛先</div>
            <div class="col-3 offset-1">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
            </div>
            <div class="col-3 offset-2">
                <%= f.submit "更新", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
    </div>
    <% end %>
</div>