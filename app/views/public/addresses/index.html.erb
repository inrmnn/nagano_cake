<div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">配送先登録/一覧</h2>
             
        </div>     
    </div>          
    
    <%= form_with model: @address_new, url: addresses_path, local:true do |f| %>
    <div class="row mb-3">
         <div class="col-11 mb-3">
          <div class="row">
            <div class="col-3 col-form-label">郵便番号（ハイフンなし）</div>
            <div class="col-3 offset-1">
              <%= f.telephone_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control"%>
            </div>
          </div>
        </div>
        
        <div class="col-11 mb-3">
          <div class="row">
            <div class="col-2 col-form-label">住所</div>
            <div class="col-7 offset-2">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"%>
            </div>
          </div>
        </div>
        
        <div class="col-11 mb-3">
          <div class="row">
            <div class="col-3 col-form-label">宛先</div>
            <div class="col-3 offset-1">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
            </div>
            <div class="col-3 offset-2">
                <%= f.submit "新規登録", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
    </div>
    <% end %>
    <div class="row">
        <table class="table table-bordered border-dark col-9">
            <thead>
                <tr class="border-color">
                    <th class="table-active">郵便番号</th>
                    <th class="table-active col-5">住所</th>
                    <th class="table-active">宛名</th>
                    <th class="table-active"></th>
                </tr>
            </thead>
            <tbody>
                <% @address.each do |address| %>
                <tr>
                    <td><%= address.postal_code %></td>
                    <td><%= address.address %></td>
                    <td><%= address.name %></td>
                    <td><%= link_to "編集する", edit_address_path(address) ,class: "btn btn-primary btn-sm" %>
                    <%= link_to "削除する", address_path(address) , method: :delete ,class: "btn btn-danger btn-sm","data-confirm" => "よろしいですか？" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>