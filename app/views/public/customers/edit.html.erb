<div class="container">
  <div class="row">
    <div class="ml-5">
　　　 <h2 class="mb-3">会員情報編集</h2>
         
          
    </div>     
  </div>    
  <%= form_with model: @customer, url: public_customers_path do |f| %>  
       <div class="row mb-3">
         
           
            
            <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">名前</div>
                <div class="col-1 col-form-label offset-1">（姓）</div>
                <div class="col-3">
                 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control"%>
                </div>
                 <div class="col-1 col-form-label ">（名）</div>
                <div class="col-3">
                 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control"%>
                </div>
              </div>
            </div>
            
             <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">フリガナ</div>
                <div class="col-1 col-form-label offset-1">（ｾｲ）</div>
                <div class="col-3">
                 <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control"%>
                </div>
                 <div class="col-1 col-form-label ">（ﾒｲ）</div>
                <div class="col-3">
                 <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control"%>
                </div>
              </div>
            </div>
            
            <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">メールアドレス</div>
                <div class="col-3 offset-2">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
                </div>
              </div>
            </div>
            
            <div class="col-11 mb-3">
              <div class="row">
                <div class="col-3 col-form-label">郵便番号（ハイフンなし）</div>
                <div class="col-3 offset-1">
                  <%= f.telephone_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control"%>
                </div>
              </div>
            </div>
            
            <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">住所</div>
                <div class="col-7 offset-2">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"%>
                </div>
              </div>
            </div>
            
            <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">電話番号</div>
                <div class="col-7 offset-2">
                  <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control"%>
                </div>
              </div>
            </div>
            
           
             
          
           
          
          <div class="col-11 mb-3">
              <div class="row">
                <div class="col-3 offset-4">
                  <div class="row justify-content-center">
                  <%= f.submit "編集内容を保存",class: "btn btn-success col-10" %> 
                  </div>
                </div>
                <div class="col-3 offset-2">
                  <%= link_to '退会する', public_confirmation_path, class:'btn btn-danger col-7' %>
                </div>
              </div>
            </div>
      </div>       
<% end %>
      
    
   
</div>

