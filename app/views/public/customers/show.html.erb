<div class="container">
   <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">マイページ</h2>
        </div> 
    </div>
    <h4 class="font-weight-bold mt-3">登録情報　<%= link_to "編集する",  edit_public_customers_path , class: 'btn btn-primary' %></h4>
    
    <table class="table table-bordered border-dark col-6 mt-3 mb-5">
        <tr>
            <th class="table-active col-2 table-color">氏名</th>
            <th class="col-4"><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        <tr>
            <th class="table-active table-color">カナ</th>
            <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
             <th class="table-active table-color">郵便番号</th>
            <th><%= @customer.postal_code %></th>
        </tr>
         <tr>
             <th class="table-active table-color">住所</th>
            <th><%= @customer.address %></th>
        </tr>
         <tr>
             <th class="table-active table-color">電話番号</th>
            <th><%= @customer.telephone_number %></th>
        </tr>
         <tr>
             <th class="table-active table-color">メールアドレス</th>
            <th><%= @customer.email %></th>
        </tr>
    </table>
</div>