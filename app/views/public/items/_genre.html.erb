 <div class="col-3">
      <table class="table table-borderless genre_table">
          <thead class="genre_thead">
              <tr>
                <th>
                　ジャンル検索
                </th>
              </tr>
           </thead>
           <tbody>
              <% genres.each do |genre| %>
              <tr>
                  <th>
                <%= link_to items_path(genre_id: genre.id), class:"text-dark" do %>
                
                 <%= genre.name %>
                <% end %>
                  </th>
               </tr> 
              <% end %>
        </tbody>
      </table>
  </div>